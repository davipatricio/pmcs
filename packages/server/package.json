{
	"name": "@pmcs/server",
	"version": "1.0.0",
	"description": "PMCS is a Minecraft server written in TypeScript",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"typecheck": "tsc",
    "lint": "biome check .",
    "format": "biome check --apply ."
	},
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/index.d.ts"
      ]
    }
  },
	"devDependencies": {
		"@types/node": "^20.11.17",
		"@types/uuid": "^9.0.8",
		"tsup": "^8.0.2",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"@pmcs/chat": "workspace:^",
		"@pmcs/encoding": "workspace:^",
		"@pmcs/packets": "workspace:^",
		"pino": "^8.18.0",
		"pino-pretty": "^11.0.0",
		"uuid": "^9.0.1"
	}
}
